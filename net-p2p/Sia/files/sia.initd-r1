: ${UG:="sia:sia"}
: ${OPTS:="-d /var/lib/sia"}
: ${PIDFILE:="/run/siad.pid"}

name="Sia daemon"
command="/usr/bin/siad"
command_args="${OPTS}"
command_background=yes
pidfile="${PIDFILE}"
start_stop_daemon_args="-u ${UG}"

depend() {
	use net
	after dns
}
