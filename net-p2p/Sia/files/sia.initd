description="Blockchain-based marketplace for file storage"

name="Sia daemon"
pidfile="$PIDFILE"
command="/usr/bin/siad"
command_args="$SIA_OPTS"
command_background=yes
start_stop_daemon_args="--user $NAME --group $NAME"

depend() {
	use net
	after dns
}
