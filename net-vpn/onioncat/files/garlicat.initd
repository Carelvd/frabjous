: ${UG:="onioncat:onioncat"}
: ${PIDFILE:="/run/gcat.pid"}

name="GaliCat"
command="/usr/bin/gcat"
command_args="-P ${PIDFILE} ${GCAT_OPTS}"
command_background=yes
pidfile="${PIDFILE}"
start_stop_daemon_args="-u ${UG}"

depend() {
	use net
	need i2p i2pd
}
