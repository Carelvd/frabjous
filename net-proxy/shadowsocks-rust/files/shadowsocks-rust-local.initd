: ${SHADOWSOCKS_USER:=shadowsocks}
: ${SHADOWSOCKS_GROUP:=shadowsocks}
: ${SHADOWSOCKS_OPTS:="-c /etc/shadowsocks-rust/local.json"}
: ${SHADOWSOCKS_LOG:="/var/log/shadowsocks-rust/${SVCNAME}.log"}
: ${SSD_OPTS:="-1 ${SHADOWSOCKS_LOG} -2 ${SHADOWSOCKS_LOG}"}

extra_started_commands="reload"
description="A lightweight local socks5 proxy"
description_reload="Reload the ${SVCNAME} configuration"

command="/usr/bin/sslocal"
command_args="${SHADOWSOCKS_OPTS}"
command_background="yes"
pidfile="/run/${SVCNAME}/${SVCNAME}.pid"
start_stop_daemon_args="-u ${SHADOWSOCKS_USER} \
	-g ${SHADOWSOCKS_GROUP} ${SSD_OPTS}"

depend() {
	need net
}

start_pre() {
	checkpath -d -m 0755 -o "${SHADOWSOCKS_USER}":"${SHADOWSOCKS_GROUP}" "${pidfile%/*}"
}

reload() {
	ebegin "Refreshing ${SVCNAME} configuration"
	kill -HUP $(cat ${pidfile}) &>/dev/null
	eend $? "Failed to reload ${SVCNAME}"
}
